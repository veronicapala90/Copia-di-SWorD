<% #Provide the page title in a symbol to application.html.erb to avoid duplication %>
<% provide :title, 'Sign In' %>

<h1>Sign In</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit 'Sign in', class: 'btn btn-large btn-default' %>

    <% end %>

    <p>New user? <%= link_to 'Sign up now!', signup_path, class: 'btn btn- btn-default' %></p>
  </div>
</div>
